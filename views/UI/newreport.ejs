<% layout("/layouts/boilerplate") %>

<body>
    <h1 class="Heading">Create Report</h1>
    <div class="content">
        <div class="report-form-container">
            <form class="report-form" method="post" action="/reports">
                
                <label class="report-label" for="reportName"> Name of Your Report </label>
                <input class="report-input" id="reportName" name="name" type="text" placeholder="Report Name" list="reportNameOptions" required>
                <datalist id="reportNameOptions">
                    <option value="January">
                    <option value="February">
                    <option value="March">
                    <option value="April">
                    <option value="May">
                    <option value="June">
                    <option value="July">
                    <option value="August">
                    <option value="September">
                    <option value="October">
                    <option value="November">
                    <option value="December">
                </datalist>

                <label class="report-label" for="reportIncome"> Income </label>
                <input class="report-input" id="reportIncome" name="incomeAmount" type="text" placeholder="Amount" required>

                <label class="report-label" for="reportDescription">Description</label>
                <input class="report-input" id="reportDescription" name="description" type="text" placeholder="Report Description" list="descriptionOptions" required>
                <datalist id="descriptionOptions">
                    <option value="Salary">
                    <option value="Budget">
                    <option value="Pocket Money">
                </datalist>

                <button class="btn-add-report">Add</button>
            </form>
        </div>
    </div>
</body>